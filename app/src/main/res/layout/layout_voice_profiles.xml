<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_voice_profiles_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/voice_profile_background"
    android:padding="16dp">

    <ImageView
        android:id="@+id/voice_profile_image"
        android:src="@drawable/temp_acorn"
        android:layout_width="80dp"
        android:layout_height="60dp" />

    <TextView
        android:id="@+id/voice_profile_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/voice_profile_image"
        android:layout_centerVertical="true"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/delete_voice_profile_button"
        android:text="@string/placeholder_short"
        android:textColor="@color/black"
        android:textSize="22sp"
        />


    <Button
        android:id="@+id/delete_voice_profile_button"
        android:background="@color/colorAccent"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:text="X"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_alignParentEnd="true" />


</RelativeLayout>