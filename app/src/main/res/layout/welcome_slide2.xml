<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF6F00">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:backgroundTint="@android:color/white"
            android:background="@drawable/temp_acorn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/splash_screen_2_heading"
            android:textColor="@android:color/white"
            android:textSize="@dimen/splash_screen_title_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:text="@string/splash_screen_2_message"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/splash_screen_message_size" />

    </LinearLayout>


</RelativeLayout>