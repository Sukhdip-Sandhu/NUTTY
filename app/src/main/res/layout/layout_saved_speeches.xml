<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/save_speech_profiles_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/voice_profile_background"
    android:layout_marginBottom="16dp"
    android:padding="16dp">

    
    <TextView
        android:id="@+id/saved_speech_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="16dp"
        android:text="@string/placeholder_short"
        android:textColor="@color/black"
        android:textSize="22sp"
        />

    
    <Button
        android:id="@+id/delete_saved_speech_button"
        android:background="@color/colorAccent"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:text="X"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_alignParentEnd="true" />


</RelativeLayout>